{
  "schemaVersion": 1,
  "id": "apugli",
  "version": "${version}",

  "name": "Apugli",
  "description": "Pug's extension to A Power Library.",
  "authors": [
    "MerchantPug",
    "LimonBlaze"
  ],
  "contact": {
    "sources": "https://github.com/MerchantPug/apugli"
  },

  "license": "MIT",
  "icon": "pack.png",

  "accessWidener" : "apugli.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.merchantpug.apugli.Apugli"
    ],
    "client": [
      "com.github.merchantpug.apugli.ApugliClient"
    ],
    "preLaunch": [
      "com.github.merchantpug.apugli.ApugliPreLaunch"
    ],
    "modmenu": [
      "com.github.merchantpug.apugli.integration.ApugliModMenuIntegration"
    ]
  },
  "mixins": [
    "apugli.mixins.json",
    "apugli.fabric.mixins.json"
  ],
  "custom": {
    "modmenu": {
      "badges": ["library"]
    }
  },
  "depends": {
    "java": ">=17",
    "fabricloader": ">=0.12.3",
    "fabric": ">=0.55.0",
    "minecraft": ">=1.19.1",
    "apoli": ">=2.6.0",
    "calio": ">=1.7.0"
  }
}
