{
  "type": "apoli:multiple",
  "hover": {
    "type": "apugli:hover",
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_active_resource",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "apugli:velocity",
          "y": 0.0,
          "comparison": ">="
        },
        {
          "type": "apugli:key_pressed",
          "key": {
            "key": "key.jump",
            "continuous": true
          }
        },
        {
          "type": "apoli:climbing",
          "inverted": true
        },
        {
          "type": "apoli:fluid_height",
          "fluid": "minecraft:water",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "apoli:fluid_height",
          "fluid": "minecraft:lava",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "apoli:fall_flying",
          "inverted": true
        },
        {
          "type": "apoli:riding",
          "inverted": true
        },
        {
          "type": "apoli:power_active",
          "power": "*:*_toggle_resource"
        }
      ]
    }
  },
  "deplete_while_using": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:change_resource",
          "resource": "*:*_active_resource",
          "change": -1
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:*_recharge_condition_resource",
          "change": 0,
          "operation": "SET"
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "apoli:power_active",
      "power": "*:*_hover"
    }
  },
  "recharge": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_active_resource",
      "change": 2
    },
    "interval": 1,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:power_active",
          "power": "*:*_hover",
          "inverted": true
        },
        {
          "type": "apoli:resource",
          "resource": "*:*_recharge_condition_resource",
          "comparison": "==",
          "compare_to": 10
        }
      ]
    }
  },
  "recharge_condition_increase": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_recharge_condition_resource",
      "change": 1
    },
    "interval": 1,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:or",
          "conditions": [
            {
              "type": "apoli:on_block"
            },
            {
              "type": "apoli:riding"
            }
          ]
        },
        {
          "type": "apoli:power_active",
          "power": "*:*_hover",
          "inverted": true
        }
      ]
    }
  },
  "active_resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 60,
    "start_value": 60,
    "hud_render": {
      "should_render": true,
      "sprite_location": "apugli:tmo_resource_bar.png",
      "bar_index": 8,
      "condition": {
        "type": "apoli:and",
        "conditions": [
          {
            "type": "apoli:power_active",
            "power": "*:*_toggle_resource"
          },
          {
            "type": "apoli:resource",
            "resource": "*:*_active_resource",
            "comparison": "==",
            "compare_to": 60,
            "inverted": true
          }
        ]
      }
    },
    "condition": {
      "type": "apoli:power_active",
      "power": "*:*_toggle_resource"
    }
  },
  "inactive_resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 60,
    "hud_render": {
      "should_render": true,
      "sprite_location": "apugli:tmo_resource_bar.png",
      "bar_index": 9,
      "condition": {
        "type": "apoli:power_active",
        "power": "*:*_toggle_resource",
        "inverted": true
      }
    },
    "condition": {
      "type": "apoli:power_active",
      "power": "*:*_toggle_resource",
      "inverted": true
    }
  },
  "recharge_condition_resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 10,
    "hud_render": {
      "should_render": false
    }
  },
  "sync_values": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apugli:resource_transfer",
      "resource": "*:*_inactive_resource",
      "provider": "*:*_active_resource"
    },
    "interval": 1,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apugli:compare_resource",
          "resource": "*:*_inactive",
          "compare_to": "*:*_inactive_resource",
          "comparison": "==",
          "inverted": true
        },
        {
          "type": "apoli:power_active",
          "power": "*:*_toggle_resource",
          "inverted": true
        }
      ]
    }
  },
  "toggle": {
    "type": "apoli:active_self",
    "entity_action": {
      "type": "apoli:if_else",
      "condition": {
        "type": "apoli:power_active",
        "power": "*:hover_toggle_resource"
      },
      "if_action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:toggle",
            "power": "*:hover_toggle_resource"
          },
          {
            "type": "apugli:resource_transfer",
            "resource": "*:hover_inactive_resource",
            "provider": "*:hover_active_resource"
          }
        ]
      },
      "else_action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:toggle",
            "power": "*:hover_toggle_resource"
          },
          {
            "type": "apugli:resource_transfer",
            "resource": "*:hover_active_resource",
            "provider": "*:hover_inactive_resource"
          }
        ]
      }
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": false
    },
    "key": {
      "key": "key.apoli.primary_active"
    }
  },
  "toggle_resource": {
    "type": "apoli:toggle",
    "active_by_default": true,
    "key": {
      "key": "null"
    }
  }
}