{
  "schemaVersion": 1,
  "id": "apugli",
  "version": "${version}",

  "name": "Apugli",
  "description": "Pug's extension to A Power Library.",
  "authors": [
    "Pug"
  ],
  "contact": {
    "sources": "https://github.com/MerchantPug/apugli"
  },

  "license": "MIT",
  "icon": "assets/apugli/icon.png",

  "accessWidener" : "apugli.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.merchantpug.apugli.Apugli"
    ],
    "client": [
      "io.github.merchantpug.apugli.ApugliClient"
    ]
  },
  "mixins": [
    "apugli.mixins.json"
  ],
  "custom": {
    "modmenu": {
      "badges": ["library"]
    }
  },
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16",
    "apoli": ">=2.0.1"
  }
}
