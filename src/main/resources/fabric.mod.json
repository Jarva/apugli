{
  "schemaVersion": 1,
  "id": "apugli",
  "version": "${version}",

  "name": "Apugli",
  "description": "Pug's extension to A Power Library.",
  "authors": [
    "MerchantPug"
  ],
  "contact": {
    "sources": "https://github.com/MerchantPug/apugli"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/apugli/icon.png",

  "accessWidener" : "apugli.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.merchantpug.apugli.Apugli"
    ],
    "client": [
      "net.merchantpug.apugli.ApugliClient"
    ],
    "preLaunch": [
      "net.merchantpug.apugli.ApugliPreLaunch"
    ],
    "modmenu": [
      "net.merchantpug.apugli.integration.ApugliModMenuIntegration"
    ],
    "cardinal-components": [
      "net.merchantpug.apugli.component.ApugliEntityComponents"
    ]
  },
  "mixins": [
    "apugli.mixins.json"
  ],
  "custom": {
    "modmenu": {
      "badges": ["library"]
    },
    "cardinal-components": [
      "apugli:attack",
      "apugli:hits_on_target",
      "apugli:keys_pressed"
    ]
  },
  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": ">=0.54.0",
    "minecraft": "1.19.x",
    "java": ">=17",
    "apoli": ">=2.5.0"
  }
}
